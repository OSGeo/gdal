    sqlite3 \
    swig \
    unixodbc-dev \
    wget \
    zip

COPY requirements.txt /tmp/
RUN PYTHON_CMD=python3 && $PYTHON_CMD -m pip install -U --break-system-packages -r /tmp/requirements.txt

RUN PYTHON_CMD=python3 && $PYTHON_CMD -m pip install --break-system-packages fsspec
