    libcairo2-dev \
    libcfitsio-dev \
    libcrypto++-dev \
    libclang-18-dev \
    libclang-cpp18-dev \
    libcurl4-gnutls-dev \
    libexpat-dev \
    libfcgi-dev \
    libfyba-dev \
    libfreexl-dev \
    libgeos-dev \
    libgeotiff-dev \
    libgif-dev \
    libhdf4-alt-dev \
    libhdf5-serial-dev \
    libjpeg-dev \
    libjxl-dev \
    libkml-dev \
    liblcms2-2 \
    liblz4-dev \
    liblzma-dev \
    libmuparser-dev \
    libmysqlclient-dev \
